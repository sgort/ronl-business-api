{
  "realm": "ronl",
  "enabled": true,
  "displayName": "RONL - Regels Overheid Nederland",
  "displayNameHtml": "<div class=\"kc-logo-text\"><span>RONL</span></div>",
  "sslRequired": "external",
  "registrationAllowed": false,
  "loginWithEmailAllowed": false,
  "duplicateEmailsAllowed": true,
  "resetPasswordAllowed": false,
  "editUsernameAllowed": false,
  "bruteForceProtected": true,
  "permanentLockout": false,
  "maxFailureWaitSeconds": 900,
  "minimumQuickLoginWaitSeconds": 60,
  "waitIncrementSeconds": 60,
  "quickLoginCheckMilliSeconds": 1000,
  "maxDeltaTimeSeconds": 43200,
  "failureFactor": 5,
  "accessTokenLifespan": 900,
  "accessTokenLifespanForImplicitFlow": 900,
  "ssoSessionIdleTimeout": 1800,
  "ssoSessionMaxLifespan": 36000,
  "offlineSessionIdleTimeout": 2592000,
  "accessCodeLifespan": 60,
  "accessCodeLifespanUserAction": 300,
  "accessCodeLifespanLogin": 1800,
  "actionTokenGeneratedByAdminLifespan": 43200,
  "actionTokenGeneratedByUserLifespan": 300,
  "oauth2DeviceCodeLifespan": 600,
  "oauth2DevicePollingInterval": 5,
  "clients": [
    {
      "clientId": "ronl-business-api",
      "name": "RONL Business API",
      "description": "Secure Business API for municipality BPMN services",
      "enabled": true,
      "clientAuthenticatorType": "client-secret",
      "redirectUris": ["*"],
      "webOrigins": ["http://localhost:5173", "http://localhost:3000", "http://localhost:3002"],
      "protocol": "openid-connect",
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": false,
      "publicClient": true,
      "frontchannelLogout": false,
      "fullScopeAllowed": true,
      "attributes": {
        "access.token.lifespan": "900",
        "client.secret.creation.time": "1706400000"
      },
      "protocolMappers": [
        {
          "name": "municipality",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-attribute-mapper",
          "consentRequired": false,
          "config": {
            "user.attribute": "municipality",
            "claim.name": "municipality",
            "jsonType.label": "String",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "userinfo.token.claim": "true"
          }
        },
        {
          "name": "assurance_level",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-attribute-mapper",
          "consentRequired": false,
          "config": {
            "user.attribute": "assurance_level",
            "claim.name": "loa",
            "jsonType.label": "String",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "userinfo.token.claim": "true"
          }
        },
        {
          "name": "mandate",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-attribute-mapper",
          "consentRequired": false,
          "config": {
            "user.attribute": "mandate",
            "claim.name": "mandate",
            "jsonType.label": "JSON",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "userinfo.token.claim": "true"
          }
        },
        {
          "name": "realm_roles",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-realm-role-mapper",
          "consentRequired": false,
          "config": {
            "claim.name": "realm_access.roles",
            "jsonType.label": "String",
            "multivalued": "true",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "userinfo.token.claim": "true"
          }
        },
        {
          "name": "audience",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-audience-mapper",
          "consentRequired": false,
          "config": {
            "included.client.audience": "ronl-business-api",
            "id.token.claim": "false",
            "access.token.claim": "true",
            "userinfo.token.claim": "false"
          }
        }
      ]
    }
  ],
  "roles": {
    "realm": [
      {
        "name": "citizen",
        "description": "Regular citizen using municipality services"
      },
      {
        "name": "representative",
        "description": "Representative acting on behalf of a citizen (with mandate)"
      },
      {
        "name": "caseworker",
        "description": "Municipality caseworker processing applications"
      },
      {
        "name": "admin",
        "description": "Municipality administrator"
      }
    ]
  },
  "users": [
    {
      "username": "test-citizen-utrecht",
      "enabled": true,
      "firstName": "Test",
      "lastName": "Burger",
      "email": "test@utrecht.nl",
      "emailVerified": true,
      "credentials": [
        {
          "type": "password",
          "value": "test123",
          "temporary": false
        }
      ],
      "attributes": {
        "municipality": ["utrecht"],
        "assurance_level": ["hoog"],
        "opaque_id": ["opaque-citizen-001"]
      },
      "realmRoles": ["citizen"]
    },
    {
      "username": "test-caseworker-utrecht",
      "enabled": true,
      "firstName": "Test",
      "lastName": "Medewerker",
      "email": "medewerker@utrecht.nl",
      "emailVerified": true,
      "credentials": [
        {
          "type": "password",
          "value": "test123",
          "temporary": false
        }
      ],
      "attributes": {
        "municipality": ["utrecht"],
        "assurance_level": ["hoog"],
        "employee_id": ["emp-001"]
      },
      "realmRoles": ["caseworker"]
    }
  ],
  "identityProviders": [
    {
      "alias": "digid",
      "displayName": "DigiD",
      "providerId": "saml",
      "enabled": false,
      "config": {
        "singleSignOnServiceUrl": "https://digid.nl/saml/sso",
        "postBindingResponse": "true",
        "postBindingAuthnRequest": "true",
        "validateSignature": "true",
        "wantAuthnRequestsSigned": "true"
      }
    },
    {
      "alias": "eidas",
      "displayName": "eIDAS",
      "providerId": "saml",
      "enabled": false,
      "config": {
        "singleSignOnServiceUrl": "https://eidas.nl/saml/sso",
        "postBindingResponse": "true",
        "postBindingAuthnRequest": "true",
        "validateSignature": "true"
      }
    }
  ],
  "clientScopes": [
    {
      "name": "municipality",
      "description": "Municipality information",
      "protocol": "openid-connect",
      "attributes": {
        "include.in.token.scope": "true",
        "display.on.consent.screen": "true"
      }
    },
    {
      "name": "mandate",
      "description": "Mandate/representation information",
      "protocol": "openid-connect",
      "attributes": {
        "include.in.token.scope": "true",
        "display.on.consent.screen": "true"
      }
    }
  ]
}
