# RONL Business API Configuration

# Server Configuration
NODE_ENV=development
PORT=3002
HOST=0.0.0.0

# CORS Configuration (comma-separated origins)
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Keycloak Configuration
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=ronl
KEYCLOAK_CLIENT_ID=ronl-business-api
KEYCLOAK_CLIENT_SECRET=your-client-secret-here

# Token Validation
JWT_ISSUER=http://localhost:8080/realms/ronl
JWT_AUDIENCE=ronl-business-api
TOKEN_CACHE_TTL=300

# Operaton BPMN Engine
OPERATON_BASE_URL=http://localhost:8081/engine-rest
OPERATON_TIMEOUT=30000

# Database (Audit Logs)
DATABASE_URL=postgresql://audit_user:audit_password@localhost:5432/audit_logs
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_PER_TENANT=true

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs
LOG_FILE_MAX_SIZE=10m
LOG_FILE_MAX_FILES=7

# Audit Logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_INCLUDE_IP=true
AUDIT_LOG_RETENTION_DAYS=2555

# Security
HELMET_ENABLED=true
SECURE_COOKIES=false
TRUST_PROXY=false

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true

# Tenant Configuration
DEFAULT_MAX_PROCESS_INSTANCES=1000
ENABLE_TENANT_ISOLATION=true
